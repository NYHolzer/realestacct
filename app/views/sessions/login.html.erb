<h1> Log In Here </h1>

<%= flash[:error] %>

<%= form_for @user, url: login_path, method: :post do |f| %>

    <%=f.label :username%>
    <%=f.text_field :username%>

    <%=f.label :password%>
    <%=f.password_field :password%>

    <%=f.submit "Login"%>
<% end %>

<%= link_to('Log in with Facebook!', '/auth/facebook') %>