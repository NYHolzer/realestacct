
<%=form_for unit do |f| %>
<%= render partial:"layouts/error", locals: {obj: unit} %>
<%=f.label :apt_num%>
<%=f.text_field :apt_num%>
<br/>
<%=f.label :tenant%>
<%=f.text_field  :tenant%>
<br/>
<%=f.label :building_id%>
<%=f.text_field :building_name, list: "building_autocomplete" %>
    <datalist id="building_autocomplete">
        <%current_user.uniq_buildings.each do |building|%>
            <option value="<%= building.name %>">
        <% end %>
    </datalist>
<br/>
<%= f.submit submit_text %>
<% end %>